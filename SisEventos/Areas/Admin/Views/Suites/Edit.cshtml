@model SisEventos.ViewModels.SuiteVM

@{
    ViewData["Title"] = "Alteração de Suíte";
}

<h1>Alteração de Suíte</h1>

<div class="row">
    <form asp-controller="Suites"
          asp-action="Edit"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Tipo"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Tipo" />
                <small class="text-danger" asp-validation-for="Tipo"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="QtCamaCasal"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="QtCamaCasal" />
                <small class="text-danger" asp-validation-for="QtCamaCasal"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="QtCamaSolteiro"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="QtCamaSolteiro" />
                <small class="text-danger" asp-validation-for="QtCamaSolteiro"></small>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-12">
                <a asp-area="Admin"
                   asp-controller="Suites"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>
