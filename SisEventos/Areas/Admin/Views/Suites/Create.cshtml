@model SisEventos.ViewModels.SuiteVM
@{
    ViewData["Title"] = "Suite";
}

<h2>Nova suíte</h2>

<div class="row">

    <form asp-controller="Suites"
          asp-action="Create"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Tipo"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Tipo"/>
                <span class="text-danger" asp-validation-for="Tipo"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="QtCamaCasal"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="QtCamaCasal" />
                <span class="text-danger" asp-validation-for="QtCamaCasal"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="QtCamaSolteiro"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="QtCamaSolteiro" />
                <span class="text-danger" asp-validation-for="QtCamaSolteiro"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-12 col-sm-12">
                <a asp-area="Admin"
                   asp-controller="Suites"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>

</div>