@model SisEventos.ViewModels.HotelVM

@{
    ViewData["Title"] = "Novo hotel";
}

<h1>Novo Hotel</h1>

<div class="row">

    <form asp-controller="Hoteis"
          asp-action="Create"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Nome"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Descricao"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Descricao" />
                <span class="text-danger" asp-validation-for="Descricao"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Preco"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Preco" />
                <span class="text-danger" asp-validation-for="Preco"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="IdCursoSelecionado"></label>
            <div class="col-sm-12">
                <select class="form-control" asp-for="IdCursoSelecionado" asp-items="Model.Cursos">
                    <option value="">Selecione uma opção</option>
                </select>
                <span class="text-danger" asp-validation-for="IdCursoSelecionado"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Imagem"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Imagem" />
                <span class="text-danger" asp-validation-for="Imagem"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-12 col-sm-10">
                <a asp-area="Admin"
                   asp-controller="Hoteis"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>

</div>