@model SisEventos.ViewModels.HotelVM

@{
    ViewData["Title"] = "Alteração de Hotel";
}

<h1>Alteração de Hotel</h1>

<div class="row">
    <form asp-controller="Hoteis"
          asp-action="Edit"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Nome"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Nome" />
                <small class="text-danger" asp-validation-for="Nome"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Descricao"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Descricao" />
                <small class="text-danger" asp-validation-for="Descricao"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Preco"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Preco" />
                <small class="text-danger" asp-validation-for="Preco"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Imagem"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Imagem" />
                <small class="text-danger" asp-validation-for="Imagem"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="IdCidadeSelecionada"></label>
            <div class="col-sm-12">
                <select class="form-control" asp-for="IdCidadeSelecionada" asp-items="Model.Cidades">
                    <option value="">Selecione uma opção</option>
                </select>
                <small class="text-danger" asp-validation-for="IdCidadeSelecionada"></small>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-12">
                <a asp-area="Admin"
                   asp-controller="Hoteis"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>
