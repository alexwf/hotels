@model SisEventos.ViewModels.UsuarioVM
@{
    ViewData["Title"] = "Alteração de Usuário";
}
<h1>Alteração de Usuário</h1>
<div class="row">
    <form asp-controller="Usuarios"
          asp-action="Edit"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Nome"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Nome" />
                <small class="text-danger" asp-validation-for="Nome"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Email"></label>
            <div class="col-sm-12">
                <input type="email" class="form-control" asp-for="Email" />
                <small class="text-danger" asp-validation-for="Email"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Password"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Password" />
                <small class="text-danger" asp-validation-for="Password"></small>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-12 col-sm-12">
                <a asp-area="Admin"
                   asp-controller="Usuarios"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>
