@model SisEventos.ViewModels.UsuarioVM
@{
    ViewData["Title"] = "Usuario";
}

<h2>Novo usuário</h2>

<div class="row">

    <form asp-controller="Usuarios"
          asp-action="Create"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Nome"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Email"></label>
            <div class="col-sm-12">
                <input type="email" class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Password"></label>
            <div class="col-sm-12">
                <input type="password" class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-12 col-sm-12">
                <a asp-area="Admin"
                   asp-controller="Usuarios"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>

</div>