@model SisEventos.Models.Reserva
@{
    ViewData["Title"] = "Reserva";
}

<h2>Nova Reserva</h2>

<div class="row">

    <form asp-controller="Reservas"
          asp-action="Create"
          method="post"
          class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-12 control-label" asp-for="Id"></label>

            <div class="col-sm-12">
                <input disabled class="form-control" asp-for="Id" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-12 col-sm-12">

                <a asp-area="Admin"
                   asp-controller="Reservas"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>

                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>

            </div>
        </div>

    </form>

</div>