@model List<SisEventos.Models.Hotel>

@{
    ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">HotelS</h1>
        <p class="lead text-muted">Reserve acomodações e experiências únicas</p>
        <p>
            <a href="Hoteis" class="btn btn-primary my-2">Encontre o melhor hotel para você</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (Hotel hotel in Model)
            {
                <div class="col-md-4">
                    <a asp-area="" asp-controller="Hoteis" asp-action="Detail" asp-route-id="@hotel.Id">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="@hotel.CaminhoImagem" style="height: 225px; width: 100%; display: block;" data-holder-rendered="true">
                            <div class="card-body">
                                <h3>@hotel.Nome</h3>
                                <p class="card-text">@hotel.Descricao</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">R$ @hotel.Preco</small>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>